{
  "name": "@liammartens/svg-path-properties",
  "version": "1.3.0-beta.2",
  "description": "Calculate the length for an SVG path, to use it with node or a Canvas element",
  "keywords": [
    "path",
    "getPointAtLength",
    "length",
    "canvas",
    "svg"
  ],
  "homepage": "http://geoexamples.com/path-properties/",
  "type": "module",
  "types": "lib/index.d.ts",
  "module": "lib/index.js",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js",
      "default": "./lib/index.js"
    }
  },
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rveciana/svg-path-properties.git"
  },
  "scripts": {
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "compile:types": "tsc -p .",
    "compile:js": "esbuild --bundle --format=esm --target=safari11 --outfile=./lib/index.js ./src/index.ts",
    "compile": "run-p compile:*",
    "test": "ts-node --skip-project node_modules/tape/bin/tape test/**/*-test.ts",
    "preversion": "npm run build && git add dist && git commit --allow-empty -am \"new version\"",
    "postpublish": "git push && git push --tags"
  },
  "author": {
    "name": "Roger Veciana i Rovira",
    "url": "https://geoexamples.com"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/tape": "^4.13.4",
    "esbuild": "^0.20.0",
    "eslint": "^7.32.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "tape": "^5.6.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
